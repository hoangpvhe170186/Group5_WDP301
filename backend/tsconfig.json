{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,

    // ✅ Quan trọng thêm vào đây
    "types": ["node"],

    // ⚠ Tắt mấy cái Vite config để tránh conflict với backend
    "isolatedModules": false,
    "noUncheckedSideEffectImports": false
  },
  "include": ["src"]
}
